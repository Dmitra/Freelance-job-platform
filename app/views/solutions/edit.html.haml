- title "Edit Solution"
%h2
  Edit Solution
= error_messages_for :solution
- form_for(:solution, :url => order_solution_path(:solution_id => params[:solution_id]), :html => {:method => :put, :multipart => true }) do |f|
  %p
    Solution Body:
    %br
    = f.text_field :body, :size => 40
  %p
    Description:
    %br
    = f.text_area :description, :rows => 4, :cols => 60
  %p
    = render :partial => "assets/edit", :locals => {:attachable => @solution}
  %p
    Attachments:
    - unless @solution.assets.empty?
      %p
        %b
          Attached Files:
        #attachment_list
          = render :partial => "assets/attachment", :collection => @solution.assets
  = submit_tag "Update"
