- title "New Solution"
%h2
  New Solution
= error_messages_for :solution
- form_for :solution, :url => create_order_solution_path(:order_id => params[:order_id]), :html => { :multipart => true } do |f|
  %p
    Solution:
    %br
    = f.text_area :body, 			:size => "60x3"
  %p
    Description:
    %br
    = f.text_area :description,	:size => "60x12"
  %p
    = render :partial => "assets/edit", :locals => {:attachable => @solution}
  = submit_tag 'Post'
