- title "SignUp"
= error_messages_for :user
- form_for :user, :url => users_path do |f|
  %div{ :style => "float:left;margin-right: 20px;" }
    %p
      %label{ :for => "login" }
        Login
      %br
      = f.text_field :login
    %p
      %label{ :for => "email" }
        Email
      %br
      = f.text_field :email
    %p
      %label{ :for => "password" }
        Password
      %br
      = f.password_field :password
    %p
      %label{ :for => "password_confirmation" }
        Confirm Password
      %br
      = f.password_field :password_confirmation
    %p
      = submit_tag 'Sign up'
