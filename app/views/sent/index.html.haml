%h2
  Sent Messages
%table{ :border => "1" }
  %tr
    %th
      To
    %th
      Subject
    %th
      Sent
  - for message in @messages
    %tr
      %td
        = h message.recipients.map(&:login).to_sentence
      %td
        = link_to h(message.subject), sent_path(message)
      %td
        = distance_of_time_in_words(message.created_at, Time.now)
        ago
= will_paginate @messages
